<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/relative_container"
    tools:context="com.projectg.westudy.LoginSignup.LoginActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/register_banner_tv"
        android:text="@string/join_us_banner"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="70dp"
        android:textSize="28sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/name_tv"
        android:text="@string/name"
        android:hint="@string/name_tv"
        android:layout_marginTop="25dp"
        android:layout_below="@+id/register_banner_tv"
        android:layout_alignLeft="@+id/name_et"
        android:layout_alignStart="@+id/name_et" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/sign_in_rl"
        android:background="@drawable/green_button"
        android:gravity="center"
        android:layout_below="@+id/regstr_pword_et"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="42dp"
        android:layout_marginRight="32dp"
        android:layout_marginLeft="32dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/join_now_tv"
            android:text="@string/create_account_btn_text"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:textColor="#FFFFFF" />

    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/already_member_tv"
        android:text="@string/already_a_member_login"
        android:layout_below="@+id/sign_in_rl"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/name_et"
        android:hint="@string/sample_name"
        android:inputType="textEmailAddress"
        android:imeOptions="actionNext"
        android:layout_below="@+id/name_tv"
        android:layout_marginTop="8dp"
        android:layout_alignLeft="@+id/regstr_email_et"
        android:layout_alignStart="@+id/regstr_email_et"
        android:layout_alignRight="@+id/regstr_email_et"
        android:layout_alignEnd="@+id/regstr_email_et" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/email_text"
        android:id="@+id/email_tv"
        android:layout_below="@+id/name_et"
        android:layout_alignLeft="@+id/name_et"
        android:layout_alignStart="@+id/name_et"
        android:layout_marginTop="25dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/regstr_email_et"
        android:hint="@string/sample_email"
        android:inputType="textEmailAddress"
        android:imeOptions="actionNext"
        android:layout_below="@+id/email_tv"
        android:layout_alignRight="@+id/sign_in_rl"
        android:layout_alignEnd="@+id/sign_in_rl"
        android:layout_alignLeft="@+id/sign_in_rl"
        android:layout_alignStart="@+id/sign_in_rl"
        android:layout_marginTop="8dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/password"
        android:id="@+id/regstr_pword_tv"
        android:layout_below="@+id/regstr_email_et"
        android:layout_alignLeft="@+id/regstr_email_et"
        android:layout_alignStart="@+id/regstr_email_et"
        android:layout_marginTop="25dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/regstr_pword_et"
        android:hint="@string/regiester_pword_et"
        android:layout_below="@+id/regstr_pword_tv"
        android:layout_alignLeft="@+id/regstr_pword_tv"
        android:layout_alignStart="@+id/regstr_pword_tv"
        android:layout_alignRight="@+id/sign_in_rl"
        android:layout_alignEnd="@+id/sign_in_rl"
        android:layout_marginTop="8dp" />

</RelativeLayout>
