    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".LoginSignup.SplashActivity"
            android:theme="@style/LoginTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".LoginSignup.MainLoginActivity"
            android:theme="@style/LoginTheme">
        </activity>

        <activity
            android:name=".LoginSignup.LoginActivity"
            android:theme="@style/LoginTheme">
        </activity>

        <activity
            android:name=".LoginSignup.NewAccountRegisterActivity"
            android:theme="@style/LoginTheme">
        </activity>

        <activity
            android:name=".HomeDashboard.HomeActivity"
            android:theme="@style/LoginTheme">
        </activity>

        <activity
            android:name=".HomeDashboard.CreateProfileActivity"
            android:theme="@style/LoginTheme">
        </activity>
    </application>

</manifest>